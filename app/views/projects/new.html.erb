<h1>New Project</h1>
<%= form_with(model: @project, local: true) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    Collaborations:
    <%= form.fields_for :collaborations do |collaboration_fields| %>
      <h2>Assign Users:</h2>
      <%= collaboration_fields.collection_radio_buttons :user_id, User.where(roles:["qa","developer"]), :id, :name, include_hidden: false do |b| %>
         <%= b.label { b.radio_button + b.text } %><br>
      <% end %>
      <% collaboration_fields.hidden_field :project_id, value: @project.id %>
    <% end %>
  </div>

  <div>
    <%= form.submit %> 
  </div>
<% end %>

<%= link_to 'Back', projects_path %>
