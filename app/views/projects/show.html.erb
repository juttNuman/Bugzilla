<h5><%= link_to 'Back', projects_path %></h5>


<h1><%= @project.name %></h1>
<p><%= @project.description %></p>
<% if current_user.id == @project.creator_id %>
  <strong><%= link_to 'Edit', edit_project_path(@project) %></strong><br><br>
  <strong><%= link_to "Destroy", project_path(@project), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %></strong>
<% end %>

<h3>Users Working on Project:</h3>
<ul>
  <% @collaborations.each do |collaboration| %>
    <li>
      <%= collaboration.user.name %>
      <%= collaboration.id %>
      <% if @project.creator_id == current_user.id %>
      <%= link_to "Remove user from project", delete_collaboration_path(project_id: collaboration.project_id, user_id: collaboration.user_id, id: collaboration.id), method: :delete, data: { confirm: "Are you sure?" } %>
      <%end%>

    </li>
  <% end %>
</ul>

<% if @project.creator_id == current_user.id %>
<h2>Add New User to Project:</h2>
<%= form_with(model: [@project, Collaboration.new], local: true) do |form| %>
  <div class="field">
    <%= form.label :user_id, "Select User" %><br>
    <%= form.collection_select :user_id, User.where(roles:["qa","developer"]), :id, :name, prompt: "Select User" %>
  </div>
  <div >
    <%= form.submit "Add User" %>
  </div>
<% end %>
<%end%>





<h1>Already Designed Bugs</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Category</th>
    <th>Status</th>
    <th>User</th>
    <th>Created By</th>
    <th>Deadline</th>
    <th>Edit</th> 
  </tr>
  <% if current_user.developer? %>
    <% @project.bugs.where(user_id: current_user.id).each do |bug| %>
      <tr>
        <td><%= bug.id %></td>
        <td><%= bug.title %></td>
        <td><%= bug.category %></td>
        <td><%= bug.status %></td>
        <td>
          <% if bug.user %>
            <%= bug.user.name %>
          <% else %>
            No user assigned
          <% end %>
        </td>
        <td><%= bug.created_by %></td>
        <td><%= bug.deadline %></td>
        <!-- Edit link column -->
        <td>
          <%= link_to 'Edit', edit_project_bug_path(@project, bug) %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <% @project.bugs.each do |bug| %>
      <tr>
        <td><%= bug.id %></td>
        <td><%= bug.title %></td>
        <td><%= bug.category %></td>
        <td><%= bug.status %></td>
        <td>
          <% if bug.user %>
            <%= bug.user.name %>
          <% else %>
            No user assigned
          <% end %>
        </td>
        <td><%= bug.created_by %></td>
        <td><%= bug.deadline %></td>
        <!-- Edit link column -->
        <td>
          <%= link_to 'Edit', edit_project_bug_path(@project, bug) %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>


<% if !current_user.developer? %>
<h1>Add a Bug</h1>
<%= form_with model: [ @project, @project.bugs.build ] do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title%>
  </p>

  <p>
    <%= form.label :category %>
    <%= form.select :category, Bug.categories.keys.map { |category| [category.titleize, category] } %>
  </p>
 
   <p>
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.map { |status| [status.titleize, status] } %>
  </p>
  <p>
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </p>
  <p>
  <%= form.label :user_id, "Assign Bug To User" %><br>
  <%= form.collection_select :user_id, User.where(roles:"developer"), :id, :name, prompt: "Select User" %>
</p>
 <%= form.hidden_field :project_id, value: @project.id %>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%end%>




